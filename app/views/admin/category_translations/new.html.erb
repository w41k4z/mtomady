<h1 class="form-title">New category translation</h1>

<% if flash[:error] %>
  <p class="alert"><%= flash[:error] %></p>
<% end %>

<div class="translation-form-container">
  <%= form_with url: admin_category_translations_path, method: :post, local: true do |f| %>
    <div class="form-group">
      <label for="category_id">Category</label>
      <%= select_tag :category_id, options_from_collection_for_select(@categories, :id, :name), class: "form-control" %>
    </div>

    <div class="form-group">
      <label for="supported_language_id">Language</label>
      <%= select_tag :supported_language_id, options_from_collection_for_select(@languages, :id, :name), class: "form-control" %>
    </div>

    <div class="form-group">
      <label for="translation">Translation</label>
      <%= text_field_tag :translation, nil, class: "form-control", placeholder: "Enter translation here..." %>
    </div>

    <div class="form-actions">
      <%= submit_tag "Create Translation", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
