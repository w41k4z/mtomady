<div class="top">
    <h1 class="category-translations-title">Category Translations</h1>

    <div class="add-new-translation-btn">
        <%= link_to 'Add New Translation', new_admin_category_translation_path %>
    </div>
</div>

<% if @categories.any? %>
  <div class="categories-list">
    <% @categories.each do |category| %>
      <div class="category-card">
        <h3 class="category-name"><%= category.name %></h3>

        <ul>
          <% category.category_translations.each do |translation| %>
            <li><%= translation.translation %> <b>(<%= translation.supported_language.code %>)</b></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="no-categories">No categories found.</p>
<% end %>
